<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SimalaTour">

    <!-- Main Image (Simala Shrine) -->
    <ImageView
        android:id="@+id/SimalaTmainImage"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/simalatourbg"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/simalaBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/backicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Horizontal Images (Simala Shrine) -->
    <LinearLayout
        android:id="@+id/horizontalImages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/corner2"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/SimalaTmainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Simala Image 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/SimalaTimage1"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/simalatour1"/>

                <TextView
                    android:id="@+id/SimalaTtext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/orelago"
                    android:paddingTop="4dp"
                    android:text="The Simala Shrine"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Simala Image 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/SimalaTimage2"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/simalatour2" />

                <TextView
                    android:id="@+id/SimalaTtext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/orelago"
                    android:paddingTop="4dp"
                    android:text="The Simala Shrine"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Simala Image 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/SimalaTimage3"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/simalatour3" />

                <TextView
                    android:id="@+id/SimalaTtext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/orelago"
                    android:paddingTop="4dp"
                    android:text="The Simala Shrine"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Tour Title and Price -->
    <TextView
        android:id="@+id/SimalaTDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Simala Tour\n₱6,000"
        android:textColor="#FEAD5F"
        android:textSize="20sp"
        android:fontFamily="@font/orelago"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalImages" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/SimalaTdescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Experience a thrilling Simala Tour for just ₱6,000! Explore the Simala Shrine with convenient hotel/airport pick-up and drop-off. The package includes a 7-seater air-conditioned vehicle, a professional driver/guide, fuel, and parking fees. Perfect for a fun and adventurous day!"
        android:textColor="#000000"
        android:fontFamily="@font/lexend2"
        android:textSize="12sp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/SimalaTDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Itinerary and Inclusions (Two Columns) -->
    <LinearLayout
        android:id="@+id/simalaTItineraryAndInclusions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SimalaTdescription"
        android:padding="16dp"
        android:weightSum="2">


        <!-- Itinerary -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itinerary"
                android:fontFamily="@font/orelago"
                android:textColor="#FEAD5F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SimalaTitinerary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend2"
                android:text="• Pick Up Hotel\n• Simala Shrine Visit\n• Carcar Pasalubong\n• Drop Off Hotel"                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Inclusions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusions"
                android:fontFamily="@font/orelago"
                android:textColor="#FEAD5F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SimalaTinclusions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend2"
                android:text="• 7-Seater Van\n• Driver/Guide\n• Fuel and Parking\n• Hotel/Airport Transfers"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btnBookNowSimalatour"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#0B1534"
        android:fontFamily="@font/lexend2"
        android:text="Book Now"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

