<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/package_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logoo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBookNowCebutour"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/lexend2"
        android:text="Book Now"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Explore the \nBeauty of Cebu!"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/package_logo"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/home_buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        android:backgroundTint="#F7F7F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Packages Button -->
        <LinearLayout
            android:id="@+id/packagesbtn3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/corner4"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="3dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="Hotels Icon"
                    android:src="@drawable/packblue" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="Packages"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Itinerary Button -->
        <LinearLayout
            android:id="@+id/iterenarybtn3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/corner4"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:elevation="3dp"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:contentDescription="Rentals Icon"
                    android:src="@drawable/carblue" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="Cars Option"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Destination Button -->
        <LinearLayout
            android:id="@+id/destinationbtn3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/corner4"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="3dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="Experience Icon"
                    android:src="@drawable/desblue" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="Destination"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/home_buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/package_logo">

        <ImageView
            android:id="@+id/package_image0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/homemodel" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/homebottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_buttonLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destinations"
                android:fontFamily="@font/lexend2"
                android:layout_marginLeft="15dp"
                android:textSize="22sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="260dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <!-- 1st card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/top1img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/des4" />

                            </androidx.cardview.widget.CardView>


                            <!-- Place Name -->
                            <TextView
                                android:id="@+id/top1text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:layout_marginStart="10dp"
                                android:text="Magellan’s Cross Pavillion"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- Place Location -->
                            <TextView

                                android:id="@+id/top1text2"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/loc"
                                android:text="7WV2+CQG, P. Burgos St, Cebu City, 6000 Cebu"
                                android:textColor="#666666"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="260dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/top2img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/des5" />

                            </androidx.cardview.widget.CardView>


                            <!-- Place Name -->
                            <TextView
                                android:id="@+id/top2text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:layout_marginStart="10dp"
                                android:text="Oslob Whale Shark Watching"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- Place Location -->
                            <TextView
                                android:id="@+id/top2text2"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/loc"
                                android:text="Natalio Bacalso Avenue, Oslob, 6023 Cebu City"
                                android:textColor="#666666"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="260dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/top3img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/des3" />

                            </androidx.cardview.widget.CardView>


                            <!-- Place Name -->
                            <TextView
                                android:id="@+id/top3text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:layout_marginStart="10dp"
                                android:text="Temple of Leah"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- Place Location -->
                            <TextView
                                android:id="@+id/top3text2"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/loc"
                                android:text="Cebu Transcentral Hwy, Cebu City, 6000 Cebu"
                                android:textColor="#666666"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 4 -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="260dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/top4img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/des2" />

                            </androidx.cardview.widget.CardView>


                            <!-- Place Name -->
                            <TextView
                                android:id="@+id/top4text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:layout_marginStart="10dp"
                                android:text="Kawasan Falls"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- Place Location -->
                            <TextView
                                android:id="@+id/top4text2"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/loc"
                                android:text="Antuwanga, Cebu City, 6000 Cebu"
                                android:textColor="#666666"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- CardView for each Package Tour -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/packagesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/packagesTitle"
                    android:text="Packages"
                    android:fontFamily="@font/lexend2"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/packageseemore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See More"
                    android:textColor="#FEAD5F"
                    android:textSize="13sp"
                    android:fontFamily="@font/lexend2"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="15dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/package_card1"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/packageTourLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/white"
                    android:padding="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp">

                        <ImageView
                            android:id="@+id/package_image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/package1" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/package_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Package Tour"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@android:color/black"
                            android:paddingTop="5dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/package_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱6,000"
                            android:textSize="16sp"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/package_description1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore Cebu’s top attractions with our adventure tour! Swim with whale sharks, go canyoneering, and visit the stunning Kawasan Falls—all for just ₱6,000. See more..."
                            android:textSize="10sp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/package_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/rightarrow" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/package_card1"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="8dp">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/package_card2"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/white"
                    android:padding="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp">

                        <ImageView
                            android:id="@+id/package_image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/package2" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/package_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cebu Tour"
                            android:fontFamily="@font/poppins"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/package_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱4,500"
                            android:textSize="16sp"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/package_description2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore Cebu’s top landmarks for just ₱4,500..."
                            android:textSize="10sp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/package_button2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="-10dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/rightarrow" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Package 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/package_card3"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/white"
                    android:padding="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp">

                        <ImageView
                            android:id="@+id/package_image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/package3" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/package_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oslob  Tour"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/package_price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱5,000"
                            android:textSize="16sp"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/package_description3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enjoy an exciting Oslob Day Tour for ₱5,000! Visit Sumilon Island Sandbar, Oslob Quartel, and the beautiful Tumalog Falls. See more..."
                            android:textSize="10sp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/package_button3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="-10dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/rightarrow"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- Cars -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ItenaryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/carsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cars"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/Iterenyseemore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See More"
                    android:textColor="#FEAD5F"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="See more cars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Integrated third Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/car1bg"
                android:layout_gravity="center"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/car1bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/car1bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- Car Brand and Model -->
                    <LinearLayout
                        android:id="@+id/carNameLayout"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/rectangle"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <!-- Car Model -->
                        <TextView
                            android:id="@+id/carModel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="INNOVA CRYSTA"
                            android:layout_marginStart="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Distance and Fuel Info -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/carNameLayout"
                        android:background="@drawable/rectangle"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconDistance1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:contentDescription="Distance Icon"
                            android:src="@drawable/carseat1" />

                        <TextView
                            android:id="@+id/distanceText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="7-8 Seater"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iconFuel1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="16dp"
                            android:contentDescription="Fuel Icon"
                            android:src="@drawable/speed" />

                        <TextView
                            android:id="@+id/fuelText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="2393 CC"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/carImage1"
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car11"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homebottomNavigation"
        android:layout_width="match_parent"
        android:layout_height='65dp'
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btnbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/homeHomebtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/homeblueicon" />


            <ImageButton
                android:id="@+id/homecartbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/checkout" />


            <ImageButton
                android:id="@+id/homeProfileBtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/usericon" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
