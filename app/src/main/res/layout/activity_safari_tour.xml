<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SafariTour">

    <!-- Main Image (Tiger) -->
    <ImageView
        android:id="@+id/STmainImage"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/safaritourbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/safariBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/backicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Horizontal Images (Cebu Safari Adventure Park) -->
    <LinearLayout
        android:id="@+id/horizontalImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/corner2"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/STmainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Safari Image 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/STimage1"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/safaritour1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Safari Image 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/STimage2"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/safaritour2" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Safari Image 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/STimage3"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/safaritour3" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Tour Title and Price -->
    <TextView
        android:id="@+id/STDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Cebu Safari Tour\n₱5,000"
        android:textColor="#FEAD5F"
        android:textSize="20sp"
        android:fontFamily="@font/orelago"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalImages" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/STdescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Experience a thrilling Cebu Safari Tour for just ₱4,500! Explore the Cebu Safari and Adventure Park with convenient hotel/airport pick-up and drop-off. The package includes a 7-seater air-conditioned vehicle, a professional driver/guide, fuel, and parking fees. Perfect for a fun and adventurous day with wildlife!"
        android:textColor="#000000"
        android:fontFamily="@font/lexend2"
        android:textSize="12sp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/STDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Itinerary and Inclusions (Two Columns) -->
    <LinearLayout
        android:id="@+id/safariTourItineraryAndInclusions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/STdescription"
        android:padding="16dp"
        android:weightSum="2">

        <!-- Itinerary -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itinerary"
                android:fontFamily="@font/orelago"
                android:textColor="#FEAD5F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/STitinerary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend2"
                android:text="• Pick Up Hotel/Airport\n• Cebu Safari Adventure Park\n• Drop Off Hotel/Airport"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Inclusions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusions"
                android:fontFamily="@font/orelago"
                android:textColor="#FEAD5F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/STinclusions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend2"
                android:text="• 7-Seater Van\n• Driver/Guide\n• Fuel and Parking\n• Hotel/Airport Transfers"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Book Now Button -->
            <Button
                android:id="@+id/btnBookNowCebuSafaritour"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0B1534"
                android:fontFamily="@font/lexend2"
                android:text="Book Now"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:cornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
