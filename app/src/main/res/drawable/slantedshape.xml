<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA500" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#FFA500" />
            </shape>
        </rotate>
    </item>
</layer-list>
